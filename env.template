# APIShield Environment Configuration Template
# Copy this file to .env and update the values

# =============================================================================
# SECURITY (REQUIRED)
# =============================================================================

# Flask Secret Key (REQUIRED - Generate a secure random key)
SECRET_KEY=your-secret-key-here

# Admin Credentials (REQUIRED - Set via setup_admin.py)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password-here

# =============================================================================
# DATABASE
# =============================================================================

# Database URL (SQLite by default)
DATABASE_URL=sqlite:///api_scanner.db

# =============================================================================
# SLACK INTEGRATION (OPTIONAL)
# =============================================================================

# Slack Webhook URL for notifications
SLACK_WEBHOOK_URL=

# Slack Channel for notifications
SLACK_CHANNEL=#security-alerts

# Slack Username for bot
SLACK_USERNAME=API Security Scanner

# =============================================================================
# OPENAI INTEGRATION (OPTIONAL)
# =============================================================================

# OpenAI API Key for AI-powered descriptions
OPENAI_API_KEY=

# OpenAI Model to use
OPENAI_MODEL=gpt-3.5-turbo

# =============================================================================
# API TARGET CONFIGURATION
# =============================================================================

# Target API Portal URL
API_PORTAL_URL=https://your-api-portal-url.com/

# Target API Base URL
API_BASE_URL=https://your-api-base-url.com/

# API Authorization
API_AUTHORIZATION_HEADER=
API_AUTHORIZATION_TYPE=Bearer

# Additional API Headers (JSON format)
API_HEADERS={}

# =============================================================================
# SECURITY TOOLS
# =============================================================================

# OWASP ZAP Configuration
ZAP_API_URL=http://localhost:8080
ZAP_API_KEY=your-zap-api-key-here
ZAP_CONTEXT_NAME=api_security_context

# Tool Paths (adjust based on your installation)
SQLMAP_PATH=/usr/local/bin/sqlmap
SSRFMAP_PATH=./SSRFmap/ssrfmap.py
XSSTRIKE_PATH=/usr/local/bin/xsstrike
NUCLEI_PATH=/usr/local/bin/nuclei
ZAP_PATH=/Applications/ZAP.app/Contents/Java/zap.sh

# =============================================================================
# SCANNING CONFIGURATION
# =============================================================================

# Scan Settings
SCAN_RATE_LIMIT=10
MAX_SCAN_DURATION=300
SCAN_TIMEOUT=60
MAX_CONCURRENT_SCANS=5

# Scan Depth and Aggressiveness
SCAN_DEPTH=standard
SCAN_AGGRESSIVENESS=medium

# Tool-Specific Settings
SQLMAP_LEVEL=3
SQLMAP_RISK=2
SQLMAP_THREADS=4
NUCLEI_RATE_LIMIT=150
ZAP_SPIDER_DEPTH=3
ZAP_MAX_CHILDREN=10

# =============================================================================
# REDIS & CELERY
# =============================================================================

# Redis URL
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Password Requirements
MIN_PASSWORD_LENGTH=8
REQUIRE_STRONG_PASSWORD=True

# Session Settings
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5

# =============================================================================
# FLASK SETTINGS
# =============================================================================

# Flask Environment
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5001

# =============================================================================
# MONITORING
# =============================================================================

# Enable Metrics
ENABLE_METRICS=True
METRICS_PORT=9090

# =============================================================================
# DATA DIRECTORIES
# =============================================================================

# Data Directory
DATA_DIR=./data
